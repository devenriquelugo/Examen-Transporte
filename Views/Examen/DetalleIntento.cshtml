@model ExamenTransporte.Models.DetalleIntentoViewModel

@{
    ViewData["Title"] = "Detalle del Intento";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">@Model.TituloExamen</h1>
                    <p class="text-gray-600 mt-2">
                        Realizado el @Model.FechaRealizacion.ToString("dd/MM/yyyy") a las @Model.FechaRealizacion.ToString("HH:mm")
                    </p>
                </div>
                <div class="text-right">
                    <div class="text-4xl font-bold text-[#2f6cd6]">@Model.Porcentaje%</div>
                    <div class="text-sm text-gray-600">Puntuación</div>
                </div>
            </div>

            <!-- Estadísticas -->
            <div class="grid grid-cols-3 gap-4 mb-4">
                <div class="bg-gray-50 rounded-lg p-4 text-center">
                    <div class="text-3xl font-bold text-gray-700">@Model.TotalPreguntas</div>
                    <div class="text-sm text-gray-600">Total Preguntas</div>
                </div>
                <div class="bg-green-50 rounded-lg p-4 text-center">
                    <div class="text-3xl font-bold text-green-700">@Model.Correctas</div>
                    <div class="text-sm text-gray-600">Correctas</div>
                </div>
                <div class="bg-red-50 rounded-lg p-4 text-center">
                    <div class="text-3xl font-bold text-red-700">@Model.Incorrectas</div>
                    <div class="text-sm text-gray-600">Incorrectas</div>
                </div>
            </div>

            <!-- Filtros -->
            <div class="flex gap-2">
                <a href="@Url.Action("DetalleIntento", new { id = Model.ExamenRealizadoId, filtro = "todas" })"
                   class="px-4 py-2 rounded-lg font-semibold transition-colors @(Model.Filtro == "todas" ? "bg-[#2f6cd6] text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Todas (@(Model.Correctas + Model.Incorrectas))
                </a>
                <a href="@Url.Action("DetalleIntento", new { id = Model.ExamenRealizadoId, filtro = "correctas" })"
                   class="px-4 py-2 rounded-lg font-semibold transition-colors @(Model.Filtro == "correctas" ? "bg-[#8cf26a] text-gray-800" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Correctas (@Model.Correctas)
                </a>
                <a href="@Url.Action("DetalleIntento", new { id = Model.ExamenRealizadoId, filtro = "incorrectas" })"
                   class="px-4 py-2 rounded-lg font-semibold transition-colors @(Model.Filtro == "incorrectas" ? "bg-[#f26a6a] text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
                    Incorrectas (@Model.Incorrectas)
                </a>
            </div>
        </div>

        <!-- Lista de Respuestas -->
        <div class="space-y-4">
            @foreach (var respuesta in Model.Respuestas)
            {
                var borderClass = respuesta.EsCorrecta ? "border-[#8cf26a]" : "border-[#f26a6a]";
                var bgClass = respuesta.EsCorrecta ? "bg-green-50" : "bg-red-50";
                var iconColor = respuesta.EsCorrecta ? "text-green-700" : "text-red-700";

                <div class="bg-white rounded-xl shadow-md p-6 border-l-8 @borderClass">
                    <div class="flex items-start space-x-4">
                        <div class="flex-shrink-0 w-12 h-12 @bgClass rounded-full flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-700">@respuesta.NumeroPregunta</span>
                        </div>
                        <div class="flex-1">
                            <p class="text-lg font-semibold text-gray-800 mb-4">@respuesta.TextoPregunta</p>

                            <div class="space-y-3">
                                <div class="flex items-start space-x-2">
                                    @if (respuesta.EsCorrecta)
                                    {
                                        <svg class="w-6 h-6 @iconColor flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                        <div>
                                            <div class="font-semibold text-green-700">Tu respuesta (Correcta):</div>
                                            <div class="text-gray-700">@respuesta.RespuestaUsuario</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <svg class="w-6 h-6 @iconColor flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                        </svg>
                                        <div class="flex-1">
                                            <div class="font-semibold text-red-700 mb-2">Tu respuesta (Incorrecta):</div>
                                            <div class="text-gray-700 mb-3">@respuesta.RespuestaUsuario</div>

                                            <div class="font-semibold text-green-700 mb-2">Respuesta correcta:</div>
                                            <div class="text-gray-700 bg-green-50 p-3 rounded-lg">@respuesta.RespuestaCorrecta</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Navegación -->
        <div class="mt-8 flex justify-between">
            <a href="@Url.Action("IntentosExamen", new { id = Model.ExamenId })" class="inline-block text-[#2f6cd6] hover:text-blue-700 font-medium text-lg">
                ← Volver a Intentos
            </a>
        </div>
    </div>
</div>