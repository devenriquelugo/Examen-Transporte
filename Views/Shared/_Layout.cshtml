<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExamenTransporte</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
            min-height: 100vh;
        }
    </style>
</head>
<body class="font-sans antialiased">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-2">
                    <svg class="w-8 h-8 text-[#2f6cd6]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                    </svg>
                    <div>
                        <span class="text-2xl font-bold text-[#2f6cd6] block leading-tight">ExamenTransporte</span>
                        <span class="text-xs text-gray-500">by <span class="text-[#2f6cd6] font-semibold">BarnaStudio</span></span>
                    </div>
                </a>
            </div>
        </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>
    <footer class="mt-auto py-6 text-center text-gray-600 text-sm">
        <div class="container mx-auto px-4">
            <p class="mb-1">&copy; @DateTime.Now.Year - ExamenTransporte - Todos los derechos reservados</p>
            <a href="https://barnastudio.com" target="_blank" class="text-[#2f6cd6] hover:text-blue-700 font-semibold transition-colors">
                BarnaStudio.com
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>